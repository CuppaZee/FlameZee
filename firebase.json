{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/auth",
        "function": "auth"
      },
      {
        "source": "/user/activity",
        "function": "user_activity"
      },
      {
        "source": "/user/badges",
        "function": "user_badges"
      },
      {
        "source": "/user/specials",
        "function": "user_specials"
      },
      {
        "source": "/user/inventory",
        "function": "user_inventory"
      },
      {
        "source": "/munzee/specials/overview",
        "function": "munzee_specials_overview"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
